{
  "name": "monojs",
  "version": "0.0.1",
  "description": "This is an opinionated, dirty, bikeshed based monorepo tool and framework for building and deploying multiple projects with very few options and customizability",
  "main": "index.js",
  "type": "module",
  "bin": {
    "monojs": "./bin/index.mjs"
  },
  "scripts": {
    "lint": "eslint .",
    "prettier": "prettier . --check",
    "jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "tsc": "tsc",
    "build": "node esbuild.mjs",
    "ins": "npm i . -g",
    "compile": "npm-run-all --parallel lint prettier tsc build jest",
    "local": "npm-run-all -s compile ins",
    "test": "jest"
  },
  "author": "coffeeb4code",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.17.30",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "uuid": "^9.0.1"
  },
  "workspaces": [
    "clis/@mono/cli",
    "clis/mono",
    "packages/@cmds/add",
    "packages/@cmds/init",
    "packages/@cmds/graph",
    "packages/@cmds/build",
    "packages/@cmds/install",
    "packages/@core/mono",
    "packages/@mono/templates",
    "packages/@mono/validations",
    "packages/@core/fs-wrappers",
    "clis/@mono/mono",
    "packages/@mono/cmds",
    "packages/@mono/logic"
  ]
}
