{
  "name": "monojs",
  "version": "0.0.1",
  "description": "This is an opinionated, dirty, bikeshed based monorepo tool and framework for building and deploying multiple projects with very few options and customizability",
  "main": "index.js",
  "type": "module",
  "bin": {
    "monojs": "./bin/index.cjs"
  },
  "scripts": {
    "lint": "eslint .",
    "prettier": "prettier . --check",
    "jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "tsc": "tsc",
    "build": "node esbuild.mjs",
    "ins": "npm i . -g",
    "compile": "npm-run-all --parallel lint prettier tsc build jest",
    "local": "npm-run-all -s compile ins",
    "test": "jest"
  },
  "author": "coffeeb4code",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "esbuild": "^0.20.2",
    "eslint": "^9.0.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "uuid": "^9.0.1"
  }
}
