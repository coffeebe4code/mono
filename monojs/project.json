{
  "name": "monojs",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "monojs/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/monojs",
        "main": "monojs/src/index.ts",
        "tsConfig": "monojs/tsconfig.lib.json",
        "assets": [
          "monojs/*.md",
          {
            "input": "./monojs/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./monojs/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./monojs",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./monojs",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "monojs/jest.config.ts"
      }
    }
  }
}
