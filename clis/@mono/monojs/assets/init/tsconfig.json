{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "incremental": true
  },
  "include": [
    "packages/**/*.js",
    "clis/**/*.js",
    "apps/**/*.js",
    "services/**/*.js"
  ]
}
