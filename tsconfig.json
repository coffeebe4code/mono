{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": true,
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "paths": {
      "@mono/mono": [
        "./clis/@mono/mono/*"
      ],
      "@mono/cmds": [
        "./packages/@mono/cmds/*"
      ],
      "@mono/templates": [
        "./packages/@mono/templates/*"
      ],
      "@mono/validations": [
        "./packages/@mono/validations/*"
      ],
      "@mono/logic": [
        "./packages/@mono/logic/*"
      ]
    }
  }
}